<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="card-title">
          <div class="row">
            <div class="col-md-4">
              <h4 > General Ledger</h4>
            </div>
            <div class="col-md-4">
              <%=form_tag accounting_index_path, method: :get do %>
                <div class="input-group">
                  <%= autocomplete_field_tag "name", params[:name], autocomplete_account_name_accounting_index_path, class: 'form-control', placeholder: 'Search Account...' %>
                  <span class="input-group-btn">
                    <%= button_tag(type: 'submit', class: "btn btn-flat") do %>
                      <i class="fa fa-search"></i>
                    <% end %>
                  </span>
                </div>
              <% end %>
            </div>
            <div class="col-md-4">
              <%= link_to "New Account", new_accounting_account_path, remote: true, class: "btn btn-primary pull-right" %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-body">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#active-accounts" aria-controls="active-accounts" role="tab" data-toggle="tab">Active Accounts</a></li>
          <li role="presentation"><a href="#inactive-accounts" aria-controls="inactive-accounts" role="tab" data-toggle="tab">Inactive Accounts</a></li>
        </ul>
        <div class="tab-content">
          <%=render 'active_accounts' %>
          <%=render 'inactive_accounts' %>
        </div>
      </div>
  </div>
</div>
<div id="account-modal" class="modal fade"></div>
