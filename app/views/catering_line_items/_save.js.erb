$("ul.errors").html("")
<% if @catering_line_item.errors.any? %>
  <% @catering_line_item.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#catering-line-item-modal").modal("hide")
  window.location.reload();
<% end %>
