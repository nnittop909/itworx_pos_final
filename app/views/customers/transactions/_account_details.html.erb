<div class="tab-pane <%='active' if current_page? account_details_customer_path %>">
  <h4 class="title">Credit Details 
    <% if @member.with_credits? %>
      <span class='pull-right'><%=link_to 'New Payment', new_customer_payment_path(@member), class: 'btn btn-primary' %> </span>
    <% end %>
  </h4>
  <hr>
<h4> Payments <span class="pull-right">Total: <%=number_to_currency @member.total_payment %></span></h4>
<div class="table table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th> Date </th>
        <th> Description </th>
        <th> Reference Number </th>
        <th> Amount </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @credit_payments.each do |payment| %>
      <tr>
        <td><%=payment.date.strftime("%B %e, %Y") %></td>
        <td><%=payment.description %></td>
        <td><%=payment.reference_number %></td>

        <td><%=number_to_currency payment.debit_amounts.sum(:amount) %></td>


      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>

</div>
