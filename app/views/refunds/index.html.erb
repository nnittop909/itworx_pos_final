<div class="col-md-12">
  <div class="box box-solid">
    <div class="box-header">
      <h4 class="box-title">Refunds</h4>
        <span class="pull-right">
          <%=link_to 'New Refund', new_refund_path, class: 'btn btn-danger' %>
        </span>

    </div>
    <div class="panel-body">
      <div class="table table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th> Date </th>
              <th> Qty </th>
              <th> Stock </th>
              <th> Amount </th>
              <th> Remarks </th>
            </tr>
          </thead>
          <tbody>
            <% @refunds.each do |refund| %>
              <tr>
                <td> <%= refund.date.strftime("%B %e, %Y") %> </td>
                <td> <%= refund.quantity %></td>
                <td> <%= refund.stock.name %></td>
                <td> <%= number_to_currency refund.amount %></td>
                <td> <%= refund.remarks %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
